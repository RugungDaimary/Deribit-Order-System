{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/local/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-fdiagnostics-color=always",
        "-I/usr/local/Cellar/websocketpp/0.8.2/include", // Include path for websocketpp
        "-I/usr/local/include", // Additional include paths
        "-L/usr/local/lib", // Library paths
        "-lwebsocketpp", // Link against websocketpp
        "-lboost_system", // Link against boost system
        "-lpthread" // Link against pthread
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
